---
import Layout from '../layouts/Layout.astro';
const title = 'דף יישוב | אתר הנצחה';
const description = 'עמוד יישוב שמרכז יחד דפי זיכרון של הקהילה.';
---

<Layout title={title} description={description} active='places'>
<section class="page-hero">
      <div class="wrap">
        <div class="card">
          <div class="breadcrumbs"><a href="/places.html" style="text-decoration:underline;">יישובים</a> / דף יישוב</div>
          <h1 class="page-title" id="placeTitle">טוען…</h1>
          <p class="page-sub" id="placeSub"></p>
          <p class="muted" id="placeIntro" style="margin-top:10px; line-height:1.85;"></p>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="wrap grid people-grid" id="placePeople"></div>
    </section>
</Layout>
