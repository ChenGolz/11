---
import Layout from '../layouts/Layout.astro';
const title = 'יישובים | אתר הנצחה';
const description = 'דף שמרכז יישובים ומעבר מהיר לדפי יישוב.';
---

<Layout title={title} description={description} active='places'>
<section class="page-hero">
      <div class="wrap">
        <div class="card">
          <div class="breadcrumbs">דף הבית / יישובים</div>
          <h1 class="page-title">יישובים</h1>
          <p class="page-sub">בחרו יישוב כדי לראות את כולם יחד. סה״כ ברשימה: <strong id="totalCount"></strong></p>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="wrap grid people-grid" id="placesRoot"></div>
    </section>
</Layout>
